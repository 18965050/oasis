<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean id="dozerMapper" class="org.dozer.spring.DozerBeanMapperFactoryBean">
		<property name="mappingFiles">
			<list>
				<value>classpath:/dozer/global-configuration.xml</value>
				<value>classpath:/dozer/mapping/company-mapping.xml</value>
				<value>classpath:/dozer/mapping/tag-mapping.xml</value>
				<value>classpath:/dozer/mapping/attribute-mapping.xml</value>
				<value>classpath:/dozer/mapping/product-mapping.xml</value>
				<value>classpath:/dozer/mapping/comment-mapping.xml</value>
				<value>classpath:/dozer/mapping/user-mapping.xml</value>
				<value>classpath:/dozer/mapping/favorite-mapping.xml</value>
			</list>
		</property>
	</bean>
  
  
</beans>